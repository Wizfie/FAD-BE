generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Fad {
  id         String   @id @default(uuid())
  noFad      String?  @map("noFad")
  item       String?
  plant      String?
  terimaFad  DateTime? @map("terimaFad")
  terimaBbm  DateTime? @map("terimaBbm")
  vendor     String?
  vendorId   String?  @map("vendorId")
  vendorRel  Vendor?  @relation(fields: [vendorId], references: [id])
  status     String?
  deskripsi  String?  @db.VarChar(500)
  keterangan String?  @db.VarChar(500)
  bast       DateTime? @map("bast")
  createdAt  DateTime @default(now())

  @@map("Fad")
}

model Vendor {
  id        String   @id @default(uuid())
  name      String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  fads      Fad[]

  @@map("Vendor")
}

model User {
  id        String @id @default(uuid())
  username  String @unique
  email     String?
  password  String
  role      Role @default(EXTERNAL)
  createdAt DateTime @default(now())
  updatedAt DateTime? 
  status    String @default("ACTIVE")

  RefreshSessions RefreshSession[]

} 

enum Role { 
  EXTERNAL
  ADMIN
  INTERNAL
}

model RefreshSession {
  id              String @id @default(uuid())
  userId          String
  revoked         Boolean @default(false)
  replacedById    String?
  createdAt       DateTime @default(now())

  user            User @relation(fields:[userId] , references : [id])

  @@index([userId])

}


model ChangeLog {

  id        String @id @default(uuid())
  model     String
  action    String
  data  Json
  createdAt DateTime @default(now())

  @@map("ChangeLog")
}

model Area {
  id Int @id @default(autoincrement())
  name String @unique
  photos Photo[]
  comparisonGroups ComparisonGroup[]
}

enum PhotoCategory {
  BEFORE
  ACTION
  AFTER
}

model ComparisonGroup {
  id Int @id @default(autoincrement())
  title String?
  description String? @db.VarChar(500)
  keterangan String? @db.VarChar(500)
  summary String? @db.Text
  areaId Int?
  area Area? @relation(fields: [areaId], references: [id])
  photos Photo[]
  createdAt DateTime @default(now())
  updatedAt DateTime? 
}

model Photo {
  id  Int @id @default(autoincrement())
  areaId Int 
  area Area @relation(fields : [areaId] , references : [id])
  filename String
  thumbFilename String?
  thumbUrl String?
  originalName String
  mime String
  size Int
  url String
  takenAt DateTime?
  keterangan String? @db.VarChar(500)
  category PhotoCategory?
  comparisonGroupId Int?
  comparisonGroup ComparisonGroup? @relation(fields: [comparisonGroupId], references: [id])
  createdAt DateTime @default(now())

  @@index([areaId , createdAt])
  @@index([createdAt])
}

model ProgramInfoImage {
  id  Int @id @default(autoincrement())
  title String?
  filename String
  thumbFilename String?
  thumbUrl String?
  originalName String
  mime String
  size Int
  url String
  displayOrder Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([displayOrder])
}
